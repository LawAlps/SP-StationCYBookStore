@model MVCManukauTech.ViewModels.ConfirmPurchaseViewModel
@{
    ViewBag.Title = "Buy Membership";
}

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="MembershipName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="MembershipName" class="form-control">
            <span asp-validation-for="MembershipName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Confirm</button>
            <a asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>
